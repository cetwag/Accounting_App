<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/Scv_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/Lin_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/Lin_example_first"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/background_wish_item2"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/Lin_example_twice"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_example_wishname"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="测试（心愿名称）"
                        android:textColor="#FFFFFF"
                        android:gravity="bottom|start"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tv_example_wishmoney"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="测试金额￥9999.99"
                        android:textColor="#FFFFFF"
                        android:gravity="top|start"
                        android:textSize="13sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_example_wishmonth"
                    android:layout_marginStart="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="期望测试月份实现"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>